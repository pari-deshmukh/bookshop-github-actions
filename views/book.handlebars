
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{name}}</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>
			<h1><a href="/">Book Store</a></h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
				<a href="/cart">Cart</a>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
    <main>
      
    <script>
      function addToCart(name, price) {
        localStorage.order = {amount: 0, items: []}
        localStorage.order.amount += parseFloat(price)
        localStorage.order.items.push({name: name, qty: 1, price: parseFloat(price)})
        alert('Book added to cart!!')
      }
    </script>
      {{#if book}}
        <section class="row">
          <aside class="column left">
            <img src="{{host}}/images/{{book.image}}" alt="book cover of {{book.name}}" height="700px"/> 
          </aside>
          <p class="column right">
            <h2>{{book.name}}</h2>
            <h3><strong>Author:</strong> {{book.author}}</h3>
            <h3><strong>Price:</strong> Â£{{book.price}}</h3>
            <h4><strong>EAN:</strong> {{book.ean}}</h4>
            <p>{{book.description}}</p>
            {{#if authorised}}
          <input type="button" value="Add to Cart" onclick="addToCart('{{book.name}}',{{book.price}})">
            {{/if}}
          </p>
        </section>
      {{/if}}
    </main>
	</body>
</html>
